<div class="container">
    <h2>Klienci</h2>
    {{#each customers}}
    <div class="card mb-3">
        <div class="card-body">
            <h3 class="card-text">{{name}}</h3>
            <p class="card-text"><strong>Adres: </strong><br>
                {{address.street}} <br>
                {{address.postCode}} <br>
                {{address.city}}
            </p>
            <p class="card-text">{{nip}}</p>
            <a href="customers/{{_id}}" class="btn btn-primary">Szczegoly</a>
        </div>
    </div>
    {{/each}}
    <a href="customers/add" class="btn btn-success">Dodaj klienta</a>
</div>